<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DisplayScanResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/decodedFirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jmeno"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/decodedLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prijmeni"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/decodedBirthnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rodne cislo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <CheckBox
            android:id="@+id/checkBoxOfflineVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="offline verifikace" />

        <Button
            android:id="@+id/btnScanResScanNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skenovat dalsi QR" />

        <Button
            android:id="@+id/btnScanResManInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zadat kod rucne" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>